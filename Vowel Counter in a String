package Vowel;


public class VowelCounter {
    int countVowels(String s) {
        int count = 0;
        s = s.toLowerCase(); // make case-insensitive

        for (int i = 0; i < s.length(); i++) {
            char ch = s.charAt(i);
            if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
                count++;
            }
        }
		return count;
}
}

package Vowel;

import java.util.Scanner;

public class Main {
	
	    public static void main(String[] args) {
	        Scanner sc = new Scanner(System.in);
	        VowelCounter vc = new VowelCounter();

	        // Input at least 2 sentences
	        System.out.print("Enter first sentence: ");
	        String sentence1 = sc.nextLine();

	        System.out.print("Enter second sentence: ");
	        String sentence2 = sc.nextLine();

	        // Call countVowels() for each
	        int count1 = vc.countVowels(sentence1);
	        int count2 = vc.countVowels(sentence2);

	        // Display output
	        System.out.println("Input: \"" + sentence1 + "\" → Vowels = " + count1);
	        System.out.println("Input: \"" + sentence2 + "\" → Vowels = " + count2);

	        sc.close();
	    }

}
